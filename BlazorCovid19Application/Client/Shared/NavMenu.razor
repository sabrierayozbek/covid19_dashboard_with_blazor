    <ul class="nav flex-column flex-md-fill flex-lg-shrink-1">
        <li class="nav-item px-3" style="font-family:'Segoe UI'">
            <NavLink class="nav-link" href="index" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Today's Update
            </NavLink>
