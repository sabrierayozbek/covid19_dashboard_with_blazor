            <NavLink class="nav-link" href="searchCountry" Match="NavLinkMatch.All">
                <span class="oi oi-map" aria-hidden="true"></span> Search Country
            </NavLink>
        </li>
        <li class="nav-item px-3" style="font-family:'Segoe UI'">
            <NavLink class="nav-link" href="getMapping" Match="NavLinkMatch.All">
                <span class="oi oi-map" aria-hidden="true"></span> Map
            </NavLink>
        </li>
